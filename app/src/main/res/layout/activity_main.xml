<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_settings_button_text"
        app:layout_constraintBottom_toTopOf="@+id/main_logout_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/main_logout_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/main_logout_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/main_settings_button"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
